	<!--======================== Footer Style-2 ===========================-->
	<template id="customize_footer_style_2" inherit_id="website.footer_custom"
			  active="False">
		<xpath expr="//div[@id='footer']" position="replace">
			<div id="footer" class="oe_structure oe_structure_solo">
				<!--<xpath expr="//div[@id='footer']" position="before">-->
				<section class="s_text_block te_ftr_container pt16 pb8">
					<div class="container">
						<div class="row">
							<!-- Company Info -->
							<div class="te_company_info_section">
								<!-- Company Address -->
								<div class="te_company_detail" t-if="res_company.street or res_company.street2 or res_company.city or res_company.state_id or res_company.zip or res_company.country_id">
									<span>
										<span class="fa fa-map-marker te_ftr_info_icon"></span>
									</span>
									<p class="te_ftr_add_ept">
										<span t-field="res_company.street"/>
										<span t-field="res_company.street2"/>
										<span t-field="res_company.city"/>
										<span t-field="res_company.state_id"/>
										<span t-field="res_company.zip"/>
										<span t-field="res_company.country_id"/>
									</p>
								</div>
								<!-- Company Email -->
								<div class="te_company_detail" t-if="res_company.email">
									<span class="ftr_add_tel_email_ept">
										<span class="fa fa-envelope te_ftr_info_icon"></span>
									</span>
									<a t-att-href="'mailto: %s' %res_company.email">
										<p class="te_ftr_add_ept" t-field="res_company.email"/>
									</a>
								</div>
								<!-- Company Number -->
								<div class="te_company_detail" t-if="res_company.phone">
									<span class="ftr_add_tel_email_ept">
										<span class="fa fa-phone te_ftr_info_icon"></span>
									</span>
									<a t-att-href="'tel: %s' %res_company.phone">
										<p class="te_ftr_add_ept" t-field="res_company.phone"/>
									</a>
								</div>
							</div>
							<div class="te_footer_language_title_style_2 w-100"></div>
							<div class="te_footer_menu_social_icon">
								<!-- Website Logo -->
								<a href="/" class="te_footer_logo logo">
									<span t-field="website.logo" class="te_footer_logo_img"
										  t-options="{'widget': 'image'}" role="img"
										  t-att-aria-label="'Logo of %s' % website.name" t-att-title="website.name"/>
								</a>
								<!-- Static Menu-->
								<section t-field="website.website_footer_extra_links"/>
								<!-- Multiple Language Selected-->
								<div class="te_f2_lang_social">
									<div class="te_t_footer_lang">
										<t t-call="website.language_selector"/>
									</div>
									<!-- Social Icon -->
									<div class="te_footer_social_icon">
										<a t-if="website.social_facebook" t-att-href="website.social_facebook"
										   class="btn btn-sm btn-link">
											<span class="fa fa-facebook-square"/>
										</a>
										<a t-if="website.social_twitter" t-att-href="website.social_twitter"
										   class="btn btn-sm btn-link">
											<span class="fa fa-twitter"/>
										</a>
										<a t-if="website.social_linkedin" t-att-href="website.social_linkedin"
										   class="btn btn-sm btn-link">
											<span class="fa fa-linkedin"/>
										</a>
										<a t-if="website.social_youtube" t-att-href="website.social_youtube"
										   class="btn btn-sm btn-link">
											<span class="fa fa-youtube-play"/>
										</a>
										<a t-if="website.social_github" t-att-href="website.social_github"
										   class="btn btn-sm btn-link">
											<span class="fa fa-github"/>
										</a>
										<a t-if="website.social_instagram" t-att-href="website.social_instagram"
										   class="btn btn-sm btn-link">
											<span class="fa fa-instagram"/>
										</a>

									</div>
								</div>
								<section class="te_newsletter_margin mt-3">
									<p></p>
								</section>
							</div>
							<!-- Scroll Up Icon -->
							<div class="scrollup-div text-center">
								<a href="#" class="scrollup-a">
									<span class="fa fa-angle-up scrollup-i text-center"></span>
								</a>
							</div>
						</div>
					</div>
				</section>
			</div>
			<div class="te_footer_copyright_text container">
				<!-- Copyright Text -->
				<div class="te_copyright_add_language">
					<span>Copyright &amp;copy;</span>
					<span t-field="res_company.name" itemprop="name">Company name</span>
				</div>
				<!-- Payment Image-->

				<div class="te_footer_payment_img">
					<div class="oe_structure">
						<section>
							<img class="img-fluid"
								 src="/theme_clarico/static/src/img/customise_option/payment2.png"/>
						</section>
					</div>
				</div>
			</div>
		</xpath>
