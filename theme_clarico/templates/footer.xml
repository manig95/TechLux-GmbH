				<section class="s_text_block pb8">
					<div class="container">
						<div class="row">
							<div class="te_footer_logo_title_socialicon col-lg-4 col-md-12 py-4 px-4">
								<!-- Company Logo -->
								<h5>
									<span t-field="res_company.name"/>
								</h5>
								<!-- Footer Map -->
								<t t-if="res_company.street">
									<t t-set="street" t-value="res_company.street"/>
								</t>
								<t t-if="res_company.street2">
									<t t-set="street2" t-value="res_company.street2"/>
								</t>
								<t t-if="res_company.city">
									<t t-set="city" t-value="res_company.city"/>
								</t>
								<t t-if="res_company.zip">
									<t t-set="zip_code" t-value="res_company.zip"/>
								</t>
								<t t-if="res_company.state_id">
									<t t-set="state" t-value="res_company.state_id.name"/>
								</t>
								<t t-if="res_company.country_id">
									<t t-set="country" t-value="res_company.country_id.name"/>
								</t>
								<div class="oe_structure te_footer_map">
									<div class="mapouter">
										<div class="gmap_canvas">
											<iframe width="100%" height="100%" id="gmap_canvas"
													t-att-src="'https://maps.google.com/maps?q=%s %s %s %s %s %s %s' % (street, street2, city,zip_code, state, country,'&amp;t=&amp;z=13&amp;ie=UTF8&amp;iwloc=&amp;output=embed')" frameborder="0"
													scrolling="no" marginheight="0" marginwidth="0"></iframe>
										</div>
										<style>.mapouter{position:relative;text-align:right;height:240px;width:220px;}.gmap_canvas {overflow:hidden;background:none!important;height:100%;width:100%;}</style>
									</div>
								</div>

								<!-- Multiple Language Selected-->
								<div class="te_footer_language">
									<span>
										<t t-call="website.language_selector"/>
									</span>
								</div>
							</div>
							<!-- Static Menu-->
							<div class="col-lg-5 col-md-7 py-4 px-4 te_informations_s">
								<p></p>
								<section t-field="website.footer_style_3_content_ept"/>
							</div>
							<!-- Contact Info -->
							<div class="col-lg-3 col-md-6 py-4 px-4 te_contact_info_s">
								<section>
									<div>
										<h4 class="te_footer_menu_info">Contact Info</h4>
									</div>
								</section>
								<div>
									<ul class="te_footer_info_text">
										<!-- Company Address -->
										<li t-if="res_company.street or res_company.street2 or res_company.city or res_company.state_id or res_company.zip or res_company.country_id"
											class="te_ftr_add_info">
											<span class="te_footer_add_tel_email_text_ept">
												<span class="fa fa-map-marker"></span>
											</span>
											<span class="te_ftr_text_style d-inline-block pl-sm-2">
												<span t-field="res_company.street"/>
												<span t-field="res_company.street2"/>
												<span t-field="res_company.city"/>
												<span t-field="res_company.state_id"/>
												<span t-field="res_company.zip"/>
												<span t-field="res_company.country_id"/>
											</span>
										</li>
										<!-- Company Number -->
										<li t-if="res_company.phone" class="te_ftr_add_info">
											<span class="te_footer_add_tel_email_text_ept">
												<span class="fa fa-phone"></span>
											</span>
											<a t-att-href="'tel: %s' %res_company.phone">
												<span t-field="res_company.phone"
													  class="te_ftr_text_style d-inline-block pl-sm-2"/>
											</a>
										</li>
										<!-- Company Email -->
										<li t-if="res_company.email" class="te_ftr_add_info">
											<span class="te_footer_add_tel_email_text_ept">
												<span class="fa fa-envelope"></span>
											</span>
											<a t-att-href="'mailto: %s' %res_company.email">
												<span t-field="res_company.email"
													  class="te_ftr_text_style d-inline-block pl-sm-2"/>
											</a>
										</li>
										<!-- Social Icon-->
										<li class="te_ftr_add_info">
											<div class="te_footer_social_icon py-2">
												<a t-if="website.social_facebook" t-att-href="website.social_facebook"
												   class="btn btn-sm btn-link">
													<span class="fa fa-facebook-square"/>
												</a>
												<a t-if="website.social_twitter" t-att-href="website.social_twitter"
												   class="btn btn-sm btn-link">
													<span class="fa fa-twitter"/>
												</a>
												<a t-if="website.social_linkedin" t-att-href="website.social_linkedin"
												   class="btn btn-sm btn-link">
													<span class="fa fa-linkedin"/>
												</a>
												<a t-if="website.social_youtube" t-att-href="website.social_youtube"
												   class="btn btn-sm btn-link">
													<span class="fa fa-youtube-play"/>
												</a>
												<a t-if="website.social_github" t-att-href="website.social_github"
												   class="btn btn-sm btn-link">
													<span class="fa fa-github"/>
												</a>
												<a t-if="website.social_instagram" t-att-href="website.social_instagram"
												   class="btn btn-sm btn-link">
													<span class="fa fa-instagram"/>
												</a>

											</div>
										</li>
										<li class="te_ftr_add_info">
											<p class="text-center"></p>
										</li>
									</ul>
								</div>
							</div>
							<!-- Scroll Up Icon -->
							<div class="scrollup-div text-center">
								<a href="#" class="scrollup-a">
									<span class="fa fa-angle-up scrollup-i text-center"></span>
								</a>
							</div>
						</div>
					</div>
				</section>
			</div>
			<div class="container pb-3 te_end_ftr_container pt-2">
				<!-- Copyright Text -->
				<div class="row align-items-center">
					<div class="te_copyright_add_language col-lg-6 px-sm-0">
						<span>Copyright &amp;copy;</span>
						<span t-field="res_company.name" itemprop="name">Company name</span>
					</div>
					<!-- Payment Image -->
					<div class="te_footer_payment_img col-lg-6 px-sm-0">
						<div class="oe_structure">
							<section>
								<img class="img-fluid"
									 src="/theme_clarico/static/src/img/customise_option/payment2.png"/>
							</section>
						</div>
					</div>
				</div>
			</div>
		</xpath>
	</template>
