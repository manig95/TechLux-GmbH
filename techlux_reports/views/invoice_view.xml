<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="isr_invoice_form_inherit" model="ir.ui.view">
		<field name="name">l10n_ch.account.invoice.form</field>
		<field name="model">account.move</field>
		<field name="inherit_id" ref="account.view_move_form"/>
		<field name="arch" type="xml">

			<xpath expr="//button[@id='account_invoice_payment_btn']" position="before">
				<button name="print_esr_report"
						string="Print ESR"
						type="object"
						attrs="{'invisible':['|', '|', '|', '|',
                            ('type', 'not in', ('out_invoice', 'out_refund')),
                            ('l10n_ch_currency_name', 'not in', ['EUR', 'CHF'])]}"
						groups="base.group_user"
				/>
			</xpath>
			<xpath expr="//field[@name='invoice_date']" position="before">
				 <field name="pdf_name" invisible="1" />
				<field name="pdf_file" filename="pdf_name"/>
				<field name="pdf_2name"  invisible="1"/>
				<field name="pdf_2" filename="pdf_name"/>
			</xpath>
		</field>

	</record>
</odoo>