<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="inherit_report_layout" inherit_id="web.external_layout_clean">
		<xpath expr="//div[@class='o_clean_header']" position="replace">
			<div>
				<div class="row" style="padding-top:-30px !important;">
				<img class="col-4" style="float: left;height: 38px;margin-top: 50px;" src="/techlux_reports/static/img/Logos-02.png"/>
				<div class="col-4" style="padding-top:20px !important;color:#908e8e;width:20%;font-family: &quot;Montserrat&quot;;font-size:10px;font-weight: 100;margin-top: 35px;margin-left:100px;float:right;">
					<p style="line-height:0px;">TECHLUX GmbH</p>
					<p style="line-height:0px;">Hochdorfstrasse 5</p>
					<p style="line-height:0px;">CH-6275 Ballwil</p>
				</div>
				<div class="col-4" style="color:#908e8e;width:20%;font-family: &quot;Montserrat&quot;;font-size:10px;font-weight: 100;margin-top:55px;float:right;">
					<p style="line-height:0px;">T +41 800 533 000</p>
					<p style="line-height:0px;">info@techlux.ch</p>
					<p style="line-height:0px;">www.techlux.ch</p>
				</div>
			</div>
			</div>
		</xpath>
	</template>


	<template id="web.external_layout_standard">
		<div class="header" style="margin-left:64px;margin-right:76px">
			<div class="row" style="padding-top:-30px !important;">
				<img class="col-6" style="float: left;height: 57px;margin-top: 50px;" src="/techlux_reports/static/img/Logos-02.png"/>
				<div class="col-4" style="padding-top:20px !important;color:#908e8e;width:20%;font-family: &quot;Montserrat&quot;;font-size:10px;font-weight: 100;margin-top: 35px;margin-left:100px;float:right;">
					<p style="line-height:0px;">TECHLUX GmbH</p>
					<p style="line-height:0px;">Hochdorfstrasse 5</p>
					<p style="line-height:0px;">CH-6275 Ballwil</p>
				</div>
				<div class="col-4" style="color:#908e8e;width:20%;font-family: &quot;Montserrat&quot;;font-size:10px;font-weight: 100;margin-top:55px;float:right;">
					<p style="line-height:0px;">T +41 800 533 000</p>
					<p style="line-height:0px;">info@techlux.ch</p>
					<p style="line-height:0px;">www.techlux.ch</p>
				</div>
			</div>
		</div>

		<div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
			<t t-call="web.address_layout"/>
			<t t-raw="0"/>
		</div>

		<div class="footer o_standard_footer">
			<div style="border-top: 1px solid #cbcbcc;font-family: &quot;Montserrat&quot;;font-size:10px;font-weight: 100;margin-left:64px;margin-right:76px" class="row">
				<div style="float:left;" class="col-6">
					<p><strong>Smart.</strong>Simple
					</p>
				</div>
				<div t-if="report_type == 'pdf'" class="col-6" style="text-align:right;">
					Page:
					<span class="page"/>
					/
					<span class="topage"/>
				</div>
			</div>
		</div>
	</template>


